/* components/set-confirm/set-confirm.wxss */
@import '../../font/iconfont.wxss';
.set_c_box {
  display: flex;
  flex-wrap: wrap;
  margin: 0 27rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background: #ffffff;
}

.set_c_title {
  font-size: 22rpx;
  padding-left: 27rpx;
  line-height: 55rpx;
  color: #a1a1a2;
}

.set_c_item {
  width: calc(100% / 4);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  font-size: 22rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  border-right: 1px solid #f2f2f2;
}

.set_c_item .iconfont {
  color: #4f5259;
}

.set_c_item text {
  color: #717171;
}

.set_c_item:nth-child(4n+4) {
  border-right: none;
}